class Solution:
    def binaryGap(self, n: int) -> int:
        last = -1
        max_gap = 0
        index = 0        
        while n > 0:
            if n & 1:  
                if last != -1:
                    max_gap = max(max_gap, index - last)
                last = index
            n >>= 1
            index += 1        
        return max_gap
